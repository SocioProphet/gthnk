{% extends "shared/base.html.j2" %}

{% block content %}

{% if not current_user.is_authenticated %}

<div class="jumbotron">
    <h1 class="display-4">Language Study</h1>

    <p class="lead">
        Welcome to the Language Study.
    </p>

    <a href="/login" type="button" class="btn btn-primary btn-lg">Use Access Code <i class="fas fa-chevron-right"></i></a>
</div>

{% endif %}

{% if current_user.is_authenticated %}

<div class="jumbotron">
    <h1 class="display-4"><i class="fas fa-tachometer-alt"></i> Dashboard</h1>

    <p class="lead">
        Manage your participation on this page.
    </p>

    <p>
        <a href="/next" type="button" class="btn btn-primary btn-lg">Start Next Task <i class="fas fa-chevron-right"></i></a>
    </p>
</div>

{% if current_user.data.schedule|length >= 1 %}

<div class="container">
    <div class="row">

        <div class="col-md-6">

            <h1 class="display-5"><i class="far fa-calendar-check"></i> Schedule</h1>

            <hr class="my-4">

            <h3 class="display-6">Appointments</h3>

            {% for session in current_user.data['schedule'] %}
                {{ session }}
            {% endfor %}

        </div>
    </div>
</div>

{% endif %}

{% endif %}

{% endblock %}
