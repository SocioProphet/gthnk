{% extends 'shared/base.html.j2' %}

{% set current_page = 'results-list' %}

{% block content %}

<div class="container">

  <h2>{{count}} results: {{ query_str }}</h2>

  {% for row in data[:20] %}
    <div class="row">

      <div class="col-2">
        <a href="{{ url_for('.day_view', date=row.day.date) }}#{{ row.hhmm() }}">
          {{row.day.date}} <strong>{{row.hhmm()}}</strong>
        </a>
      </div>

      <div class="col-10">
        {% filter markdown %}{{row.content}}{% endfilter %}
      </div>

    </div>
  {% endfor %}

</div>

{% endblock %}
